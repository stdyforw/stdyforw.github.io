#include <iostream>
using namespace std;
double TinhChuvi(double a[], int n){
    double chuvi=0;
    for(int i=0;i<n-1;i++){
        chuvi+=a[i];
    }
    return chuvi;
}
int main(){
    int n;
    cout<<"nhap so canh(so dinh) cua da giac:";
    cin>>n;
    double a[n];
    for(int i=0;i<=n-1;i++){
        cout<<"Nhap do dai canh thu "<<i+1<<": ";
        cin>>a[i];
    }
    cout<<"Chu vi cua da giac: "<<TinhChuvi(a,n);
    return 0;
}
